@model Vaccinator.Models.Personne

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Personne</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateNaissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateNaissance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsResident)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsResident)
        </dd>
            @foreach (var item in Model.Injections)
            {
                if (item.Vaccin != null && item.Personne.Id == Model.Id)
                {
                    @Html.DisplayFor(model => item.Vaccin.Type)
                }
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
