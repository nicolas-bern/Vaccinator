@model Vaccinator.Models.Personne

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div class="cells2 row">
    <h4>Personne</h4>
    <hr />
    <dl class="row cell">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateNaissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateNaissance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsResident)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsResident)
        </dd>
    </dl>
    @if (Model.Injections != null)
    {
<table class="table cell">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Marque
            </th>
            <th>
                Type
            </th>
            <th>
                Date de l'administration
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Injections)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Vaccin.Marque)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Vaccin.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateAdministration)
    </td>
</tr>
        }
    </tbody>
</table>}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>